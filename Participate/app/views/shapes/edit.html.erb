<h1>Placing Shape: <%= @shape.name %></h1>

<%= form_for @shape do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, :disabled => true %>
  </div>

  <div class="form-group">
    <%= form.label :xpos %>
    <%= form.select(
          :xpos,
          options_for_select(
            Shape::POS_OPTS,
            :selected => @shape.xpos
          )
    ) %>
  </div>

  <div class="form-group">
    <%= form.label :ypos %>
    <%= form.select(
          :ypos,
          options_for_select(
            Shape::POS_OPTS,
            :selected => @shape.ypos
          )
        ) %>
  </div>

  <div class="form-group">
    <%= form.label :size%>
    <%= form.select(
          :size,
          options_for_select(
            Shape::SIZE_OPTS,
            :selected => @shape.size
          )
        ) %>
  </div>

  <%= form.hidden_field :active %>

  <%= form.submit 'Place Shape', :class=> 'btn btn-default' %>

<% end %>